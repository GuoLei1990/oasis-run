{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types"
  },
  "include": [
    "src/**/*",
    "bin/**/*"
  ]
}