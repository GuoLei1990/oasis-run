{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib":[
      "ES2020.Promise",
      "DOM"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "declarationDir": "types"
  },
  "include": [
    "src/**/*",
    "bin/**/*"
  ]
}